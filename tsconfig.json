{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",           // Root directory for your TypeScript files
    "outDir": "./dist",           // Directory for compiled JavaScript files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],        // This includes all .ts files in the src folder
  "exclude": ["node_modules"]     // Excludes node_modules from compilation
}
